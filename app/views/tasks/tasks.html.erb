<h1> My tasks </h1>
<ul>
<% @tasks.each do |t| %>
<li><%= link_to t.title, "/tasks/#{t.id}" %> </li><a><%= link_to "Delete #{t.title}",
            task_path(t.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %></a>
<% end %>
</ul>

<p><%= link_to 'Add a task', "/tasks/new" %></p>
